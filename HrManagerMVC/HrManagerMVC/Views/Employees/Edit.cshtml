<style>
    .btn-list {
        background-color: #fd7e14;
        border: none;
        padding: 5px 15px;
        display: block;
        margin: 0 auto;
        margin-bottom: 10px;
        width: 20%
    }

    .form-check {
        padding: 5px;
    }
</style>

<div id="main-content" class="dashboard">
    <div class="container-fluid">
        <div class="row">
            <div class="start-dashboard col-md-6 col-sm-12">
                <h2 class="m-0 fs-5">
                    <a class="btn btn-sm btn-arrow btn-link ps-0 btn-toggle-fullwidth">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    Dashboard
                </h2>
                <ul class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="index.html">Lucid</a></li>
                    <li class="breadcrumb-item active">Holidays</li>
                </ul>
            </div>
            <div class="end-dashboard col-md-6 col-sm-12">
                <div class="d-inline-flex icon-text">
                    <div class="me-2">
                        <h6 class="mb-0"><i class="fa fa-user"></i> 1,784</h6>
                        <small>Visitors</small>

                    </div>
                </div>
                <div class="d-inline-flex icon-text ms-lg-3 me-lg-3 ms-1 me-1">
                    <div class="me-2">
                        <h6 class="mb-0"><i class="fa fa-globe"></i> 325</h6>
                        <small>Visits</small>
                    </div>
                </div>
                <div class="d-inline-flex icon-text">
                    <div class="me-2">
                        <h6 class="mb-0"><i class="fa fa-comments"></i> 13</h6>
                        <small>Chats</small>
                    </div>

                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-12 card mt-4">
                <div class="change-data mt-3">
                    <form asp-controller="Employees" asp-action="Edit" enctype="multipart/form-data" method="post">
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="FullName" class="form-control" placeholder="FullName..." aria-label="FullName">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="FullName"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="UserName..." aria-label="FullName">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="UserName"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Email.." aria-label="Email">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="Email"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="number" asp-for="Salary" class="form-control" placeholder="Salary" aria-label="Salary">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="Salary"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="Phone.." aria-label="Phone">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="PhoneNumber"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="BirthDate" class="form-control" placeholder="Birth Date.." aria-label="Birth" onfocus="(this.type='date')">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="BirthDate"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="FinNo" class="form-control" placeholder="Fin-No" aria-label="Fin">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="FinNo"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="text" asp-for="SeriaNo" class="form-control" placeholder="Seria-No" aria-label="Seria">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="SeriaNo"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <select class="form-select" asp-for="GenderId" asp-items="new SelectList((List<Gender>)ViewBag.Gender,nameof(Gender.Id),nameof(Gender.Type))" placeholder="Department">
                                    </select>
                                </div>
                                <div class="mb-3 "><span asp-validation-for="StatusId"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <select class="form-select" asp-for="StatusId" asp-items="new SelectList((List<Status>)ViewBag.Status,nameof(Status.Id),nameof(Status.StatusName))" placeholder="Department">
                                    </select>
                                </div>
                                <div class="mb-3 "><span asp-validation-for="StatusId"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <select class="form-select" asp-for="DepartmentId" asp-items="new SelectList((List<Departments>)ViewBag.Department,nameof(Departments.Id),nameof(Departments.DepartmentName))" id="inputGroupSelect02" placeholder="Designation">
                                    </select>
                                </div>
                                <div class="mb-3 "><span asp-validation-for="DepartmentId"></span></div>
                            </div>

                            @*<div class="col-6">
                                    <div class="input-group mb-3">
                                        <select class="form-select" asp-for="StatusId" asp-items="new SelectList((List<Status>)ViewBag.Status,nameof(Status.Id),nameof(Status.StatusName))" id="inputGroupSelect02" placeholder="Status">
                                        </select>
                                    </div>
                                    <div class="mb-3 "><span asp-validation-for="StatusId"></span></div>
                                </div>*@
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <input type="file" asp-for="ImageFile" class="form-control" id="inputGroupFile01">
                                </div>
                                <div class="mb-3 "><span asp-validation-for="ImageFile"></span></div>
                            </div>
                            <div class="col-6">
                                <div class="form-check form-check-inline">
                                    <h6>Is department head?</h6>
                                    <label class="form-check-label" for="inlineRadio1">Yes</label>
                                    @Html.RadioButtonFor(x => x.IsDepartmentHead, "True")
                                    <label class="form-check-label" for="inlineRadio1">No</label>
                                    @Html.RadioButtonFor(x => x.IsDepartmentHead, "False")

                                </div>
                                <div class="mb-3 "><span asp-validation-for="IsDepartmentHead"></span></div>
                            </div>
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-list">Submit</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>

</div>
